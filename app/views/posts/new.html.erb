<% provide(:title, '新規投稿') %>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
  <h1 class="form-heading">新規投稿</h1>
    <%= form_with(model: @post, url: user_posts_path(@user), local: true, multipart: true, method: :post) do |f| %>
    <%= render partial: 'shared/error_messages', locals: { obj: @post } %>
    
      <%= f.label :store_name, class: "label-form" %>
      <%= f.text_field :store_name, class: "form-control" %>
      
      <%= f.label :menu, class: "label-form" %>
      <%= f.text_field :menu, class: "form-control" %>
      
      <%= f.label :price, class: "label-form" %>
      <%= f.number_field :price, class: "form-control" %>
      
      <%= f.label :comment, class: "label-form" %>
      <%= f.text_area :comment, rows: 5, class: "form-control" %>
      
      <%= f.label :image, class: "label-form" %>
      <%= f.file_field :image %>
      
      <%= f.submit "新規投稿", class: "btn btn-lg btn-primary btn-form" %>
    <% end %>
  </div>
</div>